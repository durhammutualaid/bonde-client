{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "babel"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "spread": true
      },
      "sourceType": "module"
    },
    "rules": {
        "no-invalid-this": 0,
        "babel/no-invalid-this": 1
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "overrides": [{
        "files": "*.spec.js",
        "globals": {
            "describe": true,
            "beforeEach": true,
            "it": true
        }
    }],
    "settings": {
        "react": {
          "version": "detect",
        }
    }
}
