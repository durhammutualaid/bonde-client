{
  "name": "bonde-admin",
  "version": "0.9.3",
  "description": "Bonde Admin - Node.js Server and React + Redux Progressive Web App",
  "author": "Nossas <tech@nosssas.org>",
  "homepage": "http://bonde.org",
  "scripts": {
    "test:lint": "standard && NODE_ENV=test node --max_old_space_size=4096 ./node_modules/.bin/jest",
    "testx": "yarn test:lint --ci --silent --runInBand --logHeapUsage",
    "test:watch": "yarn test:lint -- --watch",
    "coverage": "NODE_ENV=test nyc --reporter=text-summary node --max_old_space_size=4096 ./node_modules/.bin/jest --ci --silent",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov",
    "dev": "webpack-dev-server --config ./tools/webpack.dev.js",
    "start": "serve -s public",
    "buildx": "webpack --colors --hide-modules --bail -p --config ./tools/webpack.prod.js",
    "build:webviewer": "webpack --colors --hide-modules --bail --config ./tools/webpack.webviewer.js",
    "clean": "rm -rf build",
    "routes": "grep -rhe @route ./routes/ | sort",
    "routes-old": "grep -rhe @path ./routes/ | sort",
    "release": "standard-version",
    "push": "git push origin master --follow-tags",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9001 -c ./client/storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nossas/bonde-client.git"
  },
  "keywords": [],
  "license": "GPL-3.0",
  "dependencies": {
    "@istanbuljs/nyc-config-babel": "1.2.3",
    "@storybook/addon-actions": "3.4.8",
    "autodll-webpack-plugin": "0.3.8",
